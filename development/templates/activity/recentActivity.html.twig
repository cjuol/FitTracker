<div class="flex-1 overflow-y-auto p-4 space-y-4">
    <div v-if="activities.length === 0" class="text-center py-10">
        <p class="text-slate-600 text-xs uppercase tracking-widest">No activities yet</p>
    </div>

    <div v-for="activity in activities.slice(0, 6)" :key="activity.id" 
        class="bg-slate-900 border border-slate-800 p-4 rounded-2xl hover:bg-slate-800/60 transition-all cursor-pointer group">
        
        <div class="flex justify-between items-start mb-2">
                <div :class="activity.type === 'strength' ? 'bg-blue-500' : 'bg-green-500'" class="w-1 h-4 rounded-full"></div>
            <span class="text-xs font-mono text-slate-500 italic">
                {% verbatim %}{{ formatDate(activity.createdAt) }}{% endverbatim %}
            </span>
        </div>

        <h4 class="text-base font-bold text-slate-100 uppercase tracking-tight group-hover:text-blue-400 transition-colors">
            {% verbatim %}{{ activity.type }}{% endverbatim %}
        </h4>

        <div class="mt-3 space-y-3">
            <div v-for="item in activity.data.slice(0, 3)" :key="item.exercise || item.activity" class="bg-slate-950/60 border border-slate-800 rounded-xl p-3">
                <div class="text-lg font-bold text-slate-100">
                    {% verbatim %}{{ item.exercise || item.activity }}{% endverbatim %}
                </div>
                <div class="mt-2 flex flex-wrap gap-2">
                    <span v-if="item.reps != null" class="text-xs bg-slate-900 text-slate-300 px-2 py-1 rounded-lg border border-slate-800">
                        {% verbatim %}{{ item.reps }}{% endverbatim %} reps
                    </span>
                    <span v-if="item.weight != null" class="text-xs bg-slate-900 text-slate-300 px-2 py-1 rounded-lg border border-slate-800">
                        {% verbatim %}{{ item.weight }}{% endverbatim %} kg
                    </span>
                    <span v-if="item.rir != null" class="text-xs bg-slate-900 text-slate-300 px-2 py-1 rounded-lg border border-slate-800">
                        RIR {% verbatim %}{{ item.rir }}{% endverbatim %}
                    </span>
                    <span v-if="item.distance != null" class="text-xs bg-slate-900 text-slate-300 px-2 py-1 rounded-lg border border-slate-800">
                        {% verbatim %}{{ item.distance }}{% endverbatim %} km
                    </span>
                    <span v-if="item.duration != null" class="text-xs bg-slate-900 text-slate-300 px-2 py-1 rounded-lg border border-slate-800">
                        {% verbatim %}{{ item.duration }}{% endverbatim %} min
                    </span>
                    <span v-if="item.avg_hr != null" class="text-xs bg-slate-900 text-slate-300 px-2 py-1 rounded-lg border border-slate-800">
                        {% verbatim %}{{ item.avg_hr }}{% endverbatim %} bpm
                    </span>
                </div>
                <div v-if="item.note" class="mt-2 text-xs text-slate-400">
                    {% verbatim %}{{ item.note }}{% endverbatim %}
                </div>
            </div>
        </div>
    </div>
</div>