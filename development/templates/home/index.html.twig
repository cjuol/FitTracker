{% extends 'base.html.twig' %}

{% block body %}
{# Eliminamos max-w en m√≥vil, solo lo aplicamos en pantallas grandes (lg) #}
<div id="activity-app" class="min-h-screen bg-slate-950 text-slate-100 flex flex-col lg:flex-row">
    
    <main class="flex-1 flex flex-col items-center justify-start pt-12 px-4 md:px-10 lg:justify-center relative">
        
        <div class="text-center mb-10 w-full">
            <h1 class="text-4xl font-black tracking-tighter text-white">
                FIT <span class="text-blue-500">TRACKER</span>
            </h1>
            <p class="text-slate-500 text-[10px] uppercase tracking-[0.3em] mt-2">Registra tus sesiones y revisa tu progreso</p>
        </div>

        <div class="relative my-8">
            <div class="absolute inset-0 bg-blue-600 rounded-full animate-ping opacity-10"></div>
            <button @click="showForm = true" 
                class="relative z-10 w-32 h-32 md:w-48 md:h-48 bg-blue-600 hover:bg-blue-500 rounded-full flex items-center justify-center shadow-[0_0_50px_rgba(37,99,235,0.3)] transition-all active:scale-90 group">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 text-white fill-current" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z" />
                </svg>
            </button>
        </div>

        <div v-if="showForm" class="fixed inset-0 z-50 bg-slate-950/95 backdrop-blur-md flex items-end md:items-center justify-center">
            <div class="w-full h-[90vh] md:h-auto md:max-w-lg bg-slate-900 border-t md:border border-slate-800 p-6 rounded-t-3xl md:rounded-3xl shadow-2xl overflow-y-auto">
                <activity-form @saved="onActivitySaved" @close="showForm = false"></activity-form>
            </div>
        </div>

        <div class="w-full lg:hidden mt-8">
            <recent-activities :activities="activities"></recent-activities>
        </div>
    </main>

    <aside class="hidden lg:flex w-96 bg-slate-900/50 border-l border-slate-800/50 flex-col">
        <div class="p-6 border-b border-slate-800/50">
            <h3 class="text-xs font-black uppercase tracking-widest text-slate-500">Historial Reciente</h3>
        </div>
        <recent-activities :activities="activities"></recent-activities>
    </aside>

</div>
{% endblock %}